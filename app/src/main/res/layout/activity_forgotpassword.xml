<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startApp.LoginActivity"
    android:isScrollContainer="false"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="735dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/bacground_image"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:background="@drawable/image_login"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/bacground_imagead"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:orientation="horizontal" />
        </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layoutDirection="ltr"
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">


                    <ImageButton
                        android:id="@+id/image_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:src="@drawable/arrow"
                        android:background="@null"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/text_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/login"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:src="@drawable/phone_login" />



                <androidx.cardview.widget.CardView
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="NestedScrolling">

                        <LinearLayout
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:paddingTop="22dp"
                            android:layoutDirection="rtl"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_forgot_pass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="هل نسيت كلمة المرور؟"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/text_details"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=" قم بأدخال رقم الهوية او الأقامة لأرسال كود التأكيد"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/idCardLogin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:hint="رقم الهوية او الإقامة"
                                android:inputType="number" />

                            <Button
                                android:id="@+id/btn_send"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="إرسال" />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="44dp"/>
                        </LinearLayout>




                    </ScrollView>

                </androidx.cardview.widget.CardView>






                <View
                    android:layout_width="match_parent"
                    android:layout_height="44dp"/>




            </LinearLayout>

        </ScrollView>

    </RelativeLayout>



</ScrollView>