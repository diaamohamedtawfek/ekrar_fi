<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center">





            <RelativeLayout
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:paddingTop="12dp"
                android:layout_width="93dp"
                android:layout_height="93dp">

<!--                <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:layout_alignParentTop="true"-->
<!--                    android:id="@+id/fabNotification"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="end|bottom"-->
<!--                    android:src="@drawable/notifications"-->
<!--                    android:layout_margin="16dp" />-->


                <androidx.cardview.widget.CardView
                    android:id="@+id/fabNotification"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    app:cardCornerRadius="30dp"
                    android:background="#194584"
                    app:cardBackgroundColor="#194584"
                    android:layoutDirection="rtl"
                    >
                    <RelativeLayout
                        android:id="@+id/re_no"
                        android:layout_width="63dp"
                        android:layout_height="63dp">

                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/notifications"
                            android:layout_width="28dp"
                            android:layout_height="28dp"/>



                        <TextView
                            android:layout_alignParentRight="true"
                            android:id="@+id/textNuNotification"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:lineSpacingExtra="5sp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="3+"
                            android:background="@drawable/busin2"
                            android:textColor="@android:color/white"
                            android:textSize="12dp"
                            android:textStyle="normal" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>




            </RelativeLayout>

            <TextView
                android:id="@+id/textNameUser"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="15dp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="22sp"
                android:textColor="#303030"
                android:lineSpacingExtra="5sp"
                android:text="مرحبا بك "/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/idCard_RecevedDecument"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    app:cardBackgroundColor="#194584"
                    app:cardCornerRadius="22dp"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:src="@drawable/icon2"
                        android:layout_height="100dp"/>


                        <TextView
                            android:text="وارد"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/idCard_SendDecument"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    app:cardBackgroundColor="#194584"
                    app:cardCornerRadius="22dp"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="50dp"
                            android:src="@drawable/icon1"
                            android:layout_height="100dp"/>

                        <TextView
                            android:text="صادر"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>



            <LinearLayout
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSahed"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    app:cardBackgroundColor="#194584"
                    app:cardCornerRadius="22dp"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:src="@drawable/icon4"
                        android:layout_height="100dp"/>

                    <TextView
                        android:text="شاهد"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/sponsor_document"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    app:cardBackgroundColor="#194584"
                    app:cardCornerRadius="22dp"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:src="@drawable/icon3"
                        android:layout_height="100dp"/>

                        <TextView
                            android:text="كفيل"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>